<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer">
    @Styles.Render("~/bundles/admin/css")
</head>

<body class="body_login">
    <div class="login_form">
        <div class="login_form_img">
            <img src="~/Areas/Admin/Resources/images/user_login.png" alt="">
        </div>
        @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "form" }))
        {
            <h1>Admin login</h1>
            <div class="space"></div>
            <div class="form_group">
                <i class="fas fa-user"></i>
                <input type="text" class="form_input" name="email" placeholder="Username">
            </div>
            <div class="form_group">
                <i class="fas fa-lock"></i>
                <input type="password" class="form_input" name="password" placeholder="Password">
            </div>
            <button class="form_submit">LOGIN</button>
            <span class="errorLogin">@TempData["ErrorLogin"]</span>
        }
        @*<form action="#" class="form"></form>*@
    </div>

</body>

</html>