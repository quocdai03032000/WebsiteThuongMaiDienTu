@model IEnumerable<ThuongMaiDienTu_v2.Models.DonHang>
@{
    ViewBag.Title = "Order";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["ConfirmBill"] != null)
{
    <div class="col-sm-12">
        <div class="alert  alert-success alert-dismissible fade show" role="alert">
            <span class="badge badge-pill badge-success">Success</span> Đã xác nhận đơn hàng thành công
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
}
<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Quản lý đơn hàng</h1>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title ">Danh sách đơn hàng</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Ngày giờ</th>
                                    <th>Họ tên</th>
                                    <th>SĐT</th>
                                    <th>Số lượng</th>
                                    <th>Tổng tiền</th>
                                    <th>Tình trạng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NgayGio</td>
                                        <td><a href="@Url.Action("OderDetail","Admin",new {id = item.DonHang_id })">@item.DonHangInfor.HoTen</a></td>
                                        <td><a href="#">@item.DonHangInfor.Sdt</a></td>
                                        <td><a href="#">3</a></td>
                                        <td>@item.Total</td>
                                        @if (item.TinhTrangDonHang_id == 1)
                                        {
                                            <td style="color:red">@item.TinhTrangDonHang.TinhTrangDonHang_name</td>
                                        }
                                        @if (item.TinhTrangDonHang_id == 2)
                                        {
                                            <td style="color:green">@item.TinhTrangDonHang.TinhTrangDonHang_name</td>
                                        }
                                        @if (item.TinhTrangDonHang_id == 3)
                                        {
                                            <td style="color:darkblue">@item.TinhTrangDonHang.TinhTrangDonHang_name</td>
                                        }
                                        @if (item.TinhTrangDonHang_id == 4)
                                        {
                                            <td style="color:gray">@item.TinhTrangDonHang.TinhTrangDonHang_name</td>
                                        }

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- .animated -->
    <!-- modal add addItem -->
    <!-- modal add addItem -->
    <!-- modal add addItem -->



</div>

