        function showSuccessToast() {
            toast({
                title: "Thêm vào giỏ hàng thành công",
                // message: "Thêm sản phẩm vào giỏ hàng thành công.",
                type: "success",
                duration: 2500
            });
        }

        function showErrorToast() {
            toast({
                title: "Thất bại!",
                message: "Có lỗi xảy ra, vui lòng liên hệ quản trị viên.",
                type: "error",
                duration: 5000
            });
        }

