<body onload="showSuccessToast();">
    <!-- header -->
    <div class="header shadow">
        <nav class="header_title">
            <div class="header_logo">
                <a href="@Url.Action("Index","User")"><img src="~/Resources/img/logo.png" alt="" class="header_logo_img"></a>
            </div>
            <ul class="header_menu">
                <li class="header_menu_item"><a href="@Url.Action("Index","User")">Home</a></li>
                <li class="header_menu_item">
                    <a href="@Url.Action("AllProduct","User")">Shop <i class="fas fa-chevron-down icon_dropdown"></i></a>
                    <ul class="submenu">
                        <li class="submenu_item"><a href="@Url.Action("TeeProduct","User")">Tee | Áo thun</a></li>
                        <li class="submenu_item"><a href="@Url.Action("PantProduct","User")">Pant | Quần</a></li>
                        <li class="submenu_item"><a href="@Url.Action("JacketProduct","User")">Jacket | Áo khoác</a></li>
                        <li class="submenu_item"><a href="@Url.Action("AccessoryProduct","User")">Accessories | Phụ kiện</a></li>
                    </ul>
                </li>
                <li class="header_menu_item"><a href="">News</a></li>
                <li class="header_menu_item"><a href="@Url.Action("Contact","User")">Contact</a></li>
            </ul>
            <ul class="header_icon">
                <li class="header_icon_item"><a href=""><i class="fas fa-search"></i></a></li>
                <li class="header_icon_item">
                    <a href="@Url.Action("Cart","User")">
                        <i class="fas fa-shopping-cart"></i>
                        @if (cart == null)
                        {
                            <span class="numOfCart">0</span>
                        }
                        else
                        {
                            <span class="numOfCart">@Html.Label(cart.SumProduct.ToString())</span>
                        }

                    </a>
                </li>
                <!--Login-->
                @{
                    if (Session["User"] == null)
                    {
                        <li class="header_icon_item ">
                            <a href="@Url.Action("Login","User")"><i class="fas fa-user"></i></a>
                        </li>
                    }
                    else
                    {
                        <li class="header_icon_item header_icon_item_img js_open_modal">
                            <img src="~/Resources/img/user-removebg-preview.png" alt="">
                        </li>
                    }
                }


            </ul>
        </nav>
    </div>
    @{
        if (Session["User"] != null)
        {
            <!-- modal user -->
            <div class="modal_user shadow js_modal_user hide">
                <div class="modal_user_wrap">
                    <div class="modal_user_header">
                        <h3>Account</h3>
                        <i class="fas fa-times js_modal_close"></i>
                    </div>
                    <div class="modal_user_info">
                        <img src="~/Resources/img/user-removebg-preview.png" alt="">
                        <div class="modal_user_info_name">
                            <span>@userInfor.Name</span>
                            <span>@user.Account_user</span>
                        </div>
                    </div>
                    <div class="modal_user_setting">
                        <a href="">Đổi mật khẩu</a>
                        <a href="">Setting</a>
                        <a href="">Help</a>
                    </div>
                    <div class="modal_user_logout">
                        <a href="@Url.Action("Logout","User")">Logout</a>
                    </div>
                </div>
            </div>
        }
    }

