
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="wrap">
    <div class="main__form">       

        @using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form", @id = "form" }))
        {
            <h3 class="form_title">Đăng ký</h3>
            <div class="form_spacer"></div>
            <div class="form_group">
                <label for="name" class="form_label">Họ tên *</label>
                <input type="text" id="name" name="name" placeholder="VD: Trần Quốc Đại" class="form_control">
                <span class="form_message"></span>
            </div>
            <div class="form_group">
                <label for="phone" class="form_label">SĐT *</label>
                <input type="number" id="phone" name="phone" placeholder="0123456789" class="form_control">
                <span class="form_message"></span>
            </div>
            <div class="form_group">
                <label for="email" class="form_label">Email *</label>
                <input type="text" id="email" name="email" placeholder="VD: example@domain.com" class="form_control">
                <span class="form_message"></span>
            </div>
            <div class="form_group">
                <label for="password" class="form_label">Password *</label>
                <input type="password" id="password" name="password" placeholder="Password" class="form_control">
                <span class="form_message"></span>
            </div>
            <button class="form_submit">Đăng ký</button>
            <span class="ErrorRegister">@TempData["ErrorRegister"]</span>           
        }

    </div>
</div>


<!-- Script validate form -->
@Scripts.Render("~/bundles/script");
<script>
        Validator({
            form: '#form',
            errorSelector:'.form_message',
            rule:[
                Validator.isRequired('#name','họ tên'),
                Validator.isRequired('#phone','SĐT'),
                Validator.Sdt('#phone',9),
                Validator.isRequired('#email','email'),
                Validator.isEmail('#email'),
                Validator.minLength('#password',5)
            ],
            onSubmit: function(data){
                console.log(data);
            }
        });
</script>
